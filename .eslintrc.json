{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "prettier/prettier": "error"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "python-env/",
    "build/",
    "*.py",
    "*.pyc",
    "__pycache__/"
  ]
} 