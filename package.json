{
  "name": "vibecheck-pro",
  "version": "1.0.0",
  "description": "VibeCheck Pro - Vibration Analysis Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-flask\" \"npm run start-electron\"",
    "start-flask": "python flask_server.py",
    "start-electron": "electron .",
    "prebuild": "rm -rf dist/ python-env/",
    "build": "electron-builder && node build/bundle-python.js",
    "postinstall": "electron-builder install-app-deps",
    "publish": "npm run prebuild && electron-builder -p always && node build/bundle-python.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.0",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5"
  },
  "build": {
    "appId": "com.vibecheck.pro",
    "productName": "VibeCheck Pro",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "AHughes0227",
      "repo": "vibecheck-pro",
      "private": false,
      "releaseType": "release"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "app",
        "to": "app",
        "filter": ["**/*"]
      },
      {
        "from": "python-env",
        "to": "python",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/vc_analyzer_icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/vc_analyzer_icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/vc_analyzer_icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VibeCheck Pro",
      "perMachine": true,
      "deleteAppDataOnUninstall": true
    }
  }
} 